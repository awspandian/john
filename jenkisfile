pipeline {
    agent any

    stages {
        stage('SCM') {
            steps { git 'https://github.com/awspandian/john.git' }
        }
	stage('Build') {
            steps {
			sh label: '', script: 'mvn clean'
			sh label: '', script: 'mvn install'
                
            }
        }
        stage('Deploy') {
            steps { sh label: '', script: 'cp -rp "/var/lib/jenkins/workspace/demo-pipe/target/ddeploy.war" "/opt/apache-tomcat/webapps"'}
        }
    }
}
